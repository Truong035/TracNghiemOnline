@model TracNghiemOnline.Modell.Phong_Thi
@{
    ViewBag.Title = "DSSVThi";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}
@section scripts {
    <script>


        $(document).ready(function () {
            $(document).on('click', 'button[name=Delete]', function () {
                var maphong= $(this).closest('tr');
                var masv = $(this).closest('tr').find("td:eq(0)").text();  
                $.ajax({
                    type: 'Post',
                    url: '/Admin/QuanLyThi/XoaSVPhongThi',
                    data: { Maphong: maphong.attr('id'), Masv: masv.trim() },
                    success: function (data) {
                        if (data.status == true) {
                            alert("Xóa Thành Cong")
                            maphong.remove();
                        } else {
                            alert(data.status);
                        }
                    }
                 
                });
            });


        });



    </script>
   
}
<div class="container-fluid">
    <div class="container-fluid">

        <div class="card mb-4">
            <div class="card-header">
                <svg class="svg-inline--fa fa-table fa-w-16 mr-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="table" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M464 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zM224 416H64v-96h160v96zm0-160H64v-96h160v96zm224 160H288v-96h160v96zm0-160H288v-96h160v96z"></path></svg><!-- <i class="fas fa-table mr-1"></i> Font Awesome fontawesome.com -->
                Danh sách sinh viên
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12 col-md-6"><a class="btn btn-success" href="/Admin/QuanLyThi/DSSVPhongThi/@Model.MaPhong" >Thêm mới</a></div>
                            <div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="dataTable"></label></div></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">

                                            <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 50px;">Mã</th>
                                            <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 100px;">Tên</th>

                                            <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 100px;">Lớp</th>
                                            <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 100px;"></th>
                                    </thead>
                                    <tbody id="tblSinhVien">
                                        @foreach (var item in Model.DS_SVThi)
                                        {
                                        <tr id=" @item.MaPhong">
                                            <td>
                                                @item.SinhVien.MaSV
                                            </td>
                                            <td>
                                                @item.SinhVien.Ten
                                            </td>
                                            <td>
                                                @item.SinhVien.Lop.TenLop
                                            </td>
                                            <td>
                                                <button name="Delete" id="@item.SinhVien.MaSV" class="btn btn-xs btn-warning"><i class="fa fa-edit" aria-hidden="true" style="color:white"></i></button>&ensp;
                                            </td>

                                        </tr>
                                   
                                    }

                                        </tbody>
                                    </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

