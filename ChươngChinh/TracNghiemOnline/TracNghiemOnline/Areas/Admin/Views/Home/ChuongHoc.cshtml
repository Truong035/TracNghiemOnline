@model List<TracNghiemOnline.Modell.Chuong_Hoc>
@{
    ViewBag.Title = "ChuongHoc";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}
<div class="card-body bg-danger ">
    <div class="mt-lg-5">
        <h2 class="mt-4"> Ngân Hàng Câu Hỏi </h2>

    </div>
</div>
<div class="container-fluid">
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <div class="mt-3">
                <i class="fas fa-table mr-1"> </i>
                Danh Sách Chương
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Chương</th>
                        <th>Tên Chương</th>
                        <th> Số Câu Hỏi </th>
                        <th></th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Mã Chương</th>
                        <th>Tên Chương</th>
                        <th> Số Câu Hỏi </th>
                        <th></th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>   @item.Ma_Chuong </td>

                            <td> Chương   @item.TenChuong</td>
                            <td>  @item.Kho_CauHoi.Count </td>
                            <td style="text-align:center">
                                <div class="row">
                                    <div class="col-6"><a  class="nav-link" href="/Admin/CauHoi/Index/@item.Ma_Chuong">  Danh Sách Câu Hỏi  </a></div>
                                    <div class="col-3"><a  class="nav-link" href="#"> Sữa</a></div>
                                    <div class="col-3"><a  class="nav-link" href="#"> Xóa  </a></div>

                                </div>
                            </td>
                        </tr>

                    }

                </tbody>

            </table>

        </div>
        <div class="card-body" style="text-align:center">
            <div class="row">
                <div class="col-2">
                    <a class="badge-dark nav-link" href="#"> Thêm Chương </a>
                </div>
                <div class="col-2">
                    <a class="btn-dark nav-link" href="/Admin/Home/NgânHangCauHoi/"> Quay Lại </a>
                </div>
               
            </div>
           
        </div>

    </div>
</div>



