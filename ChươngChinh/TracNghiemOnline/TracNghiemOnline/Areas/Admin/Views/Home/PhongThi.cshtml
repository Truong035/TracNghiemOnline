@model List<TracNghiemOnline.Modell.Phong_Thi>
@{
    ViewBag.Title = "PhongThi";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}
@section Jsfooter{
    <script>
        function Vothi(ID) {
            $.ajax({
                type: 'Get',
                url: '/Admin/QuanLyThi/VaoThi/' + ID,
                success: function (data) {
                    if (data.trangthai == "Chưa Thi") {
                        window.location = '/Admin/QuanLyThi/ChonDe/' + data.made;
                    }
                    else {
                        window.location = '/Admin/QuanLyThi/ToChucThi/'+ID 
                    }
                  
                }

            });

         
        }

    </script>

}
