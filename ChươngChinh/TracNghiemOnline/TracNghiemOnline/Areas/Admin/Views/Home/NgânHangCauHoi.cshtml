@model List<TracNghiemOnline.Modell.MonHoc>
@{
    ViewBag.Title = "NgânHangCauHoi";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}

<div class="container-fluid">
    <div class="card mb-4 mt-2">
        <div class="card-header">
                    <div class="mt-3">
                        <i class="fas fa-table mr-1"> </i>
                        Danh Sách Môn Học
                    </div> 
            </div>
        </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Môn </th>
                        <th>Tên Môn Học</th>
                        <th> Mô Tả </th>
                        <th></th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Mã Đề </th>

                        <th>Tên Môn Học</th>
                        <th>Mô Tả </th>
                        <th></th>



                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.Ma_Mon </td>

                            <td > @item.TenMon</td>
                            <td> @item.TenMon </td>
                            <td style="text-align:center">
                                <div class="row">
                                    <div class="col-4"><a href="/Admin/Home/ChuongHoc/@item.Ma_Mon">  Xem   </a></div>
                                    <div class="col-4"><a href="#"> Sửa</a></div>
                                    <div class="col-4"><a href="#"> Xóa  </a></div>

                                </div>
                            </td>
                        </tr>

                    }

                </tbody>

            </table>

        </div>
        <div class="row">
            <div class="col-3 " style="text-align:center" >
                <a class="btn-dark nav-link" href="#" style="text-align:center">Thêm Môn</a>
            </div>
        </div>
    </div>
    </div>