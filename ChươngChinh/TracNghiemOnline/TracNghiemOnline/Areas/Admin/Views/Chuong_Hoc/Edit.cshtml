@model TracNghiemOnline.Modell.Chuong_Hoc

@{
    ViewBag.Controller = "Chương Học";
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Chuong_Hoc</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Ma_Chuong)

        <div class="form-group">
            @Html.LabelFor(model => model.TenChuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenChuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenChuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ma_Mon, "Ma_Mon", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Ma_Mon", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Ma_Mon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Lưu cập nhật
                </button>

                <span></span>
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Chuong_Hoc")" class="btn btn-xs btn-info">
        <span><i class="fas fa-list"></i></span> Danh sách
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
