                        }
                    }
                });
            } else {
                //Update
                $.ajax({
                    url: '/Admin/HeThong/UpdateLop', type: 'post',
                    data: {
                        maLop: maLop,
                        tenLop: tenLop,
                        maNganh: maNganh
                    },
                    success: function (data) {
                        if (data.code == 200) {
                            alert(data.msg);
                            loaddsGV();
                           
                        } else {
                            alert.data(msg);
                        }
                    }
                });
            }


        });
        //click button Sua
        $(document).on('click', "button[name = 'Update']", function () {
            let ma = $(this).closest('tr').attr('id');
            let ten = $(this).closest('tr').find("td:eq(1)").text();
            let manganh = $(this).closest('tr').find("td:eq(2)").attr('id');
            $('#idLop').val(ma);
            $('#maLop').val(ma);
            $('#tenLop').val(ten);
            $('#Ma_Nganh').val(manganh);
            $('#modalLop').modal();
        });
        //Xóa
        $(document).on('click', "button[name = 'Delete']", function () {
            let ma = $(this).closest('tr').attr('id');
            $('#ma').val(ma);
            $('#modalConfirm').modal();

        });

        $('#btnYes').click(function () {
            let maGV = $('#ma').val().trim();
            $.ajax({
                url: '/Admin/HeThong/DeleteLop', type: 'post',
                data: {
                    maLop: maGV,
                },
                success: function (data) {
                    if (data.code == 200) {
                        alert(data.msg);
                        loaddsGV();
