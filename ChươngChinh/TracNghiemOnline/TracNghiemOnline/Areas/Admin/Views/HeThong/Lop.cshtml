@model TracNghiemOnline.Modell.Nganh

@{
    ViewBag.Title = "Lop";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}
<div class="container-fluid">

    <div class="card mb-4">


        <div class="row" style="padding:10px; ">
            <div class="col-sm-12 col-md-6">
                <svg class="svg-inline--fa fa-table fa-w-16 mr-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="table" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M464 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zM224 416H64v-96h160v96zm0-160H64v-96h160v96zm224 160H288v-96h160v96zm0-160H288v-96h160v96z"></path></svg><!-- <i class="fas fa-table mr-1"></i> Font Awesome fontawesome.com -->
                Danh sách lớp
            </div>
            <div class="col-sm-12 col-md-6">
                <button class="btn btn-primary" id="btnAdd" style="float:right">Thêm lớp</button>
            </div>
        </div>

        <div style="width:auto; height:3px; background-color:rgb(248,249,250);"></div>
        <div class="card-body">
            <div class="">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th style="width: 100px;">Mã lớp</th>
                                        <th style="width: 100px;">Tên lớp</th>
                                        <th style="width: 100px;">Ngành</th>
                                        <th style="width: 100px;"></th>
                                </thead>

                                <tbody id="tblLop">
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*Modal thêm sửa*@
<div class="modal" tabindex="-1" role="dialog" id="modalLop">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark" style="color:white">
                <h5 class="modal-title">THÔNG TIN LỚP</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="idLop" value="" />
                <p>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Mã lớp</label>
                        <input type="text" class="form-control" id="maLop" placeholder="Mã lớp">
                        <label for="exampleFormControlInput1">Tên lớp</label>
                        <input type="text" class="form-control" id="tenLop" placeholder="Tên lớp">

                        <label>Chọn ngành</label>
                        <div class="form-group">
                            @if (ViewBag.lstNganh != null)
                            {
                                @Html.DropDownListFor(model => model.Ma_Nganh, ViewBag.lstNganh as SelectList, "--Chọn ngành--", new { @class = "form-control" })
                            }
                        </div>

                    </div>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSubmit">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>
@*Modal Xóa*@
<div class="modal" tabindex="-1" role="dialog" id="modalConfirm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark" style="color:white">
                <h5 class="modal-title">CẢNH BÁO</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="ma" value="" />
                Bạn có chắc chắn muốn xóa?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnYes">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>

        $(document).ready(function () {
            loaddsGV();
            
        });
        //load du lieu
        function loaddsGV() {
            $('#modalLop').hide();
            $.ajax({
                url: '/Admin/HeThong/dsLop', type: 'get',

                success: function (data) {
                    if (data.code == 200) {
                        $('#tblLop').empty();
                        $.each(data.dsLop, function (k, v) {
                            let tr = '<tr id = "' + v.MaLop + '">';
                            tr += '<td>' + v.MaLop + '</td>';
                            tr += '<td>' + v.TenLop + '</td>';
                            tr += '<td id = "' + v.MaNganh + '">' + v.TenNganh + '</td>';
                            tr += '<td>';                         
                            tr += '<button name="Update" class="btn  btn-success"><i class="far fa-edit" aria-hidden="true"></i></button>&ensp;';
                            tr += '<button name="Delete" class="btn  btn-danger"><i class="far fa-trash-alt" aria-hidden="true" style="color:white"></i></button>';
                            tr += '</td > ';
                            tr += '</tr > ';
                            $('#tblLop').append(tr);

                        });

                    }
                }
            });
        };


        //show form
        $('#btnAdd').click(function () {
            $('#modalLop').modal();

            $('#idLop').val('');
        })
        //Add or Updtae
        $('#btnSubmit').click(function () {
            let maLop = $('#maLop').val().trim();
            let tenLop = $('#tenLop').val().trim();
            let maNganh = $('#Ma_Nganh').val();

            if (maLop.length == 0 || tenLop.length == 0) {
                alert("Vui lòng nhập đầy đủ thông tin");
                return;
            }
            let idLop = $('#idLop').val().trim();
            if (idLop.length == 0) {
                //Add
                $.ajax({
                    url: '/Admin/HeThong/AddLop', type: 'post',
                    data: {
                        maLop: maLop,
                        tenLop: tenLop,
                        maNganh: maNganh
                    },
                    success: function (data) {
                        if (data.code == 200) {
                            alert(data.msg);
