@using TracNghiemOnline.Modell
@model IEnumerable<Nganh>
@{
    ViewBag.Title = "NganhHoc";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}

<div class="container-fluid">

    <div class="card mb-4">
        <div class="row" style="padding:10px; ">
            <div class="col-sm-12 col-md-6">
                <svg class="svg-inline--fa fa-table fa-w-16 mr-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="table" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M464 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zM224 416H64v-96h160v96zm0-160H64v-96h160v96zm224 160H288v-96h160v96zm0-160H288v-96h160v96z"></path></svg><!-- <i class="fas fa-table mr-1"></i> Font Awesome fontawesome.com -->
                Danh sách ngành học
            </div>
            <div class="col-sm-12 col-md-6">
                <button class="btn btn-primary" id="btnAdd" style="float:right">Thêm ngành học</button>
            </div>
        </div>

        <div style="width:auto; height:3px; background-color:rgb(248,249,250);"></div>

        <div class="card-body">
            <div class="">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">

                                        <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 30px;">Mã ngành</th>
                                        <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 100px;">Tên ngành</th>
                                        <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 100px;"></th>
                                    </tr>
                                </thead>

                                <tbody id="tblNganh">
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="modalNganh">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark" style="color:white">
                <h5 class="modal-title">THÔNG TIN NGÀNH</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="idNganh" value="" />
                <p>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Mã ngành</label>
                        <input type="text" class="form-control" id="maNganh" placeholder="Mã ngành">
                        <label for="exampleFormControlInput1">Tên ngành</label>
                        <input type="text" class="form-control" id="tenNganh" placeholder="Tên ngành">
                    </div>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSubmit">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modalConfirm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title">CẢNH BÁO</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="ma" value="" />
                Bạn có chắc chắn muốn xóa?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnYes">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        $(document).ready(function () {
            loadDSGV();
        });
        //load du lieu
        function loadDSGV() {
            $.ajax({
                url: '/Admin/HeThong/dsNganh', type: 'get',

                success: function (data) {
                    if (data.code == 200) {
                        $('#tblNganh').empty();
                        $.each(data.dsNganh, function (k, v) {
                            let tr = '<tr id = "' + v.MaNganh + '">';
                            tr += '<td>' + v.MaNganh + '</td>';
                            tr += '<td>' + v.TenNganh + '</td>';
                            tr += '<td>';                          
                            tr += '<button name="Update" class="btn  btn-success"><i class="far fa-edit" aria-hidden="true"></i></button>&ensp;';
                            tr += '<button name="Delete" class="btn  btn-danger"><i class="far fa-trash-alt" aria-hidden="true" style="color:white"></i></button>';
                            tr += '</td > ';
                            tr += '</tr > ';
                            $('#tblNganh').append(tr);

                        });

                    }
                }
            });
        };

        //show form
        $('#btnAdd').click(function () {
            $('#modalNganh').modal();
            $('#idNganh').val('');
        })
        //them nganh
        $('#btnSubmit').click(function () {
            let maNganh = $('#maNganh').val().trim();
            let tenNganh = $('#tenNganh').val().trim();

            if (maNganh.length == 0 || tenNganh.length == 0) {
                alert("Vui lòng nhập đầy đủ thông tin");
                return;
            }
            let idNganh = $('#idNganh').val().trim();
            if (idNganh.length == 0) {
                //Add
                $.ajax({
                    url: '/Admin/HeThong/AddNganh', type: 'post',
                    data: {
                        maNganh: maNganh,
                        tenNganh: tenNganh
                    },
