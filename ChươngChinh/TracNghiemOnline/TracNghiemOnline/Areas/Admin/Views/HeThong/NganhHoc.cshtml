                    }
                }

            })*@
        });
        //xoa nganh
        $(document).on('click', "button[name = 'Delete']", function () {
            let ma = $(this).closest('tr').attr('id');
            $('#ma').val(ma);
            $('#modalConfirm').modal();          
        });

        $('#btnYes').click(function () {
            let maNganh = $('#ma').val().trim();
            $.ajax({
                url: '/Admin/HeThong/DeleteNganh', type: 'post',
                data: {
                    maNganh: maNganh,
                },
