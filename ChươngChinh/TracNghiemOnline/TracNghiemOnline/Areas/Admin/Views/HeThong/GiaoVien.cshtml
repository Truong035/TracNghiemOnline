                Danh sách giáo viên
                                                
                         
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <button class="btn btn-success" id="btnAdd" style="float:left">Thêm mới</button>
                        </div>
                    <div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="dataTable"></label></div></div></div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">

                                        <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 100px;">Mã giáo viên</th>
                                        <th  tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 100px;">Tên giáo viên</th>
                                        <th  tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 100px;">Ngành</th>
                                        <th  tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 100px;"></th>
                                </thead>

                                <tbody id="tblGiaoVien">
                                    
                                </tbody>
                            </table>
                        </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
</div>
@*Modal thêm sửa*@
<div class="modal" tabindex="-1" role="dialog" id="modalGiaoVien">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary" style=" color:white;">
                <h5 class="modal-title">THÔNG TIN GIÁO VIÊN</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="idGV" value="" />
                <p>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Mã giáo viên</label>
                        <input type="text" class="form-control" id="maGV" placeholder="Mã giáo viên">
                        <label for="exampleFormControlInput1">Tên giáo viên</label>
                        <input type="text" class="form-control" id="tenGV" placeholder="Tên giáo viên">

                        <label >Chọn ngành</label>
                        <div class="form-group">
                            @if (ViewBag.lstNganh != null)
                            {
                                @Html.DropDownListFor(model => model.Ma_Nganh, ViewBag.lstNganh as SelectList, "--Chọn ngành--", new { @class = "form-control" })
                            }
                        </div>
                        
                    </div>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSubmit">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>
@*Modal Xóa*@
<div class="modal" tabindex="-1" role="dialog" id="modalConfirm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary" style="color:white">
                <h5 class="modal-title">Cảnh báo</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="ma" value="" />
                Bạn có chắc chắn muốn xóa?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnYes">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>

        $(document).ready(function () {
            loaddsLop();          
        });
        //load du lieu
        function loaddsLop() {
            $.ajax({
                url: '/Admin/HeThong/dsGiaoVien', type: 'get',

                success: function (data) {
                    if (data.code == 200) {
                        $('#tblGiaoVien').empty();
                        $.each(data.dsGiaoVien, function (k, v) {
                            let tr = '<tr id = "' + v.MaGV + '">';
                            tr += '<td>' + v.MaGV + '</td>';
                            tr += '<td>' + v.TenGV + '</td>';
                            tr += '<td id = "' + v.MaNganh + '">' + v.TenNganh + '</td>';
                            tr += '<td>';
                            tr += '<button name="Update" class="btn btn-xs btn-warning"><i class="fa fa-edit" aria-hidden="true" style="color:white"></i></button>&ensp;';
                            tr += '<button name="Delete" class="btn btn-xs btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>';
                            tr += '</td > ';
                            tr += '</tr > ';
                            $('#tblGiaoVien').append(tr);

                        });

                    }
                }
            });
        };
       
        
        //show form
        $('#btnAdd').click(function () {
            $('#modalGiaoVien').modal();
            
            $('#idGV').val('');
        })
        //Add or Updtae
        $('#btnSubmit').click(function () {
            let maGV = $('#maGV').val().trim();
            let tenGV = $('#tenGV').val().trim();
            let maNganh = $('#Ma_Nganh').val();

            if (maGV.length == 0 || tenGV.length == 0) {
                alert("Vui lòng nhập đầy đủ thông tin");
                return;
            }
            let idGV = $('#idGV').val().trim();
            if (idGV.length == 0) {
                //Add
                $.ajax({
                    url: '/Admin/HeThong/AddGiaoVien', type: 'post',
                    data: {
                        maGV: maGV,
                        tenGV: tenGV,
                        maNganh: maNganh 
                    },
                    success: function (data) {
