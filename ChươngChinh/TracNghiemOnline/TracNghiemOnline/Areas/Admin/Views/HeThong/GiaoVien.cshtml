@model TracNghiemOnline.Modell.Nganh

@{
    ViewBag.Title = "GiaoVien";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}
@*Main*@
<div class="container-fluid">

    <div class="card mb-4">
        <div class="card-header" >     
            
