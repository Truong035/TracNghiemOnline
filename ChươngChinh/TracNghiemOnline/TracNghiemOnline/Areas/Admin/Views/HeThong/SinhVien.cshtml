                                        <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 50px;">Địa chỉ</th>
                                        <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 100px;">Lớp</th>
                                        <th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 100px;"></th>
                                </thead>

                                <tbody id="tblSinhVien">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modalSinhVien">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary" style="color:white">
                <h5 class="modal-title">THÔNG TIN SINH VIÊN</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="idSV" value="" />
                <p>
                    <div class="form-group">
                        <label>Mã sinh viên</label>
                        <input type="text" class="form-control" id="maSV" placeholder="Mã sinh viên">
                        <label>Tên sinh viên</label>
                        <input type="text" class="form-control" id="tenSV" placeholder="Tên sinh viên">
                        <div class="form-group">
                            <label>Ngày sinh</label>
                            <input class="form-control" type="date" id="ngaySinh" name="DateOfBirth" data-date-format />
                            <input class="form-control" id="NTL" name="NTL" type="text" disabled />
                        </div>
                        
                        <label>Địa chỉ: </label>
                        <input type="text" class="form-control" id="diaChi" placeholder="Địa chỉ" />
                        <label>Lớp: </label>
                        <div class="form-group">
                            @if (ViewBag.lstLop != null)
                            {
                                @Html.DropDownListFor(model => model.Ma_Lop, ViewBag.lstLop as SelectList, "--Chọn lớp--", new { @class = "form-control" })
                            }
                        </div>
                    </div>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSubmit">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modalConfirm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title">CẢNH BÁO</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="ma" value="" />
                Bạn có chắc chắn muốn xóa?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnYes">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>

