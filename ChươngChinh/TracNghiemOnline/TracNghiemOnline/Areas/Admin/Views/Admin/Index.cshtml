                        $('#idNganh').val(ma);

                        $('#modalBoMon').modal();
                    } else {
                        alert.data(msg);
                    }
                }

            })*@
        });
        //xoa nganh
        $(document).on('click', "button[name = 'Delete']", function () {
            let ma = $(this).closest('tr').attr('id');
            $('#ma').val(ma);
            $('#modalConfirm').modal();
        });

        $('#btnYes').click(function () {
            let maNganh = $('#ma').val().trim();
            $.ajax({
                url: '/Admin/Monhoc/DeleteMon', type: 'post',
                data: {
                    maNganh: maNganh,
                },
                success: function (data) {
                    if (data.code == 200) {
                        alert(data.msg);
