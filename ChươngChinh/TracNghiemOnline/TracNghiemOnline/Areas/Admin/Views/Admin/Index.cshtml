@model List<TracNghiemOnline.Modell.MonHoc>
@{
    ViewBag.Title = "NgânHangCauHoi";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
    var session = (TaiKhoan)Session[ComMonStants.UserLogin];
}
@using TracNghiemOnline.Modell;
@using TracNghiemOnline.ComMon;

<div class="col-md-12">
    <div class="card" id="frmmon">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">DANH SÁCH MÔN HỌC</h4>
                <button class="btn btn-primary btn-round ml-auto" data-toggle="modal" id="btnAdd" data-target="#addRowModal">
                    <i class="fa fa-plus"></i>
                    Thêm môn học
                </button>
            </div>
        </div>
        <div style="width:auto; height:3px; background-color:rgb(248,249,250);"></div>

        <div class="card-body">
            <div class="table-responsive">
                <div id="add-row_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                    <div class="col-sm-12">
                        <table id="dataTable" class="display table table-striped table-hover dataTable" role="grid" aria-describedby="add-row_info">
                            <thead>
                                <tr>
                                    <th>Mã Môn </th>
                                    <th>Tên Môn Học</th>
                                    <th>Trạng Thái</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody id="tblMon">
                                @foreach (var item in Model.Where(x => x.TrangThai == true))
                                {
                                    <tr id="@item.Ma_Mon">
                                        <td> @item.Ma_Mon </td>
                                        <td> @item.TenMon</td>
                                        
                                            @{ if (item.CheDo == true)
                                                {
                                                <td id="false">  <button name="btnTrangThai" class="btn btn-xs btn-danger "> Đóng </button></td>
                                            }
                                            else
                                            {
                                                <td id="true"> <button name="btnTrangThai" class="btn btn-xs btn-success "> Mở </button></td>
                                            }
                                            }



                                            <td>
                                                <a href="/Admin/Home/ChuongHoc/@item.Ma_Mon" class="btn btn-xs btn-primary">
                                                    <span><i class="far fa-eye"></i></span>
                                                </a>&ensp;
                                                <button name="Update" class="btn btn-xs btn-success"><i class="far fa-edit" aria-hidden="true"></i></button>&ensp;
                                                <button name="Delete" class="btn btn-xs  btn-danger"><i class="far fa-trash-alt" aria-hidden="true" style="color:white"></i></button>


                                            </td>

                                        </tr>

                                    }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="card-body card py-4" id="frmGV">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">DANH SÁCH GIÁO VIÊN</h4>
                <button class="btn btn-primary btn-round ml-auto" data-toggle="modal" id="btnLuu" data-target="#addRowModal">
                    <i class="fa fa-plus"></i>
                    Lưu
                </button>&ensp;
                <button class="btn btn-primary btn-round " data-toggle="modal" id="btnquay" data-target="#addRowModal">
                    <i class="icon-action-undo"></i>
                    Quay Lại
                </button>
            </div>
        </div>
        <div class="table-responsive">
            <div id="add-row_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">

                <div class="col-sm-12">
                    <table id="dataTable" class="display table table-striped table-hover dataTable" role="grid" aria-describedby="add-row_info">
                        <thead>
                            <tr role="row">
                                <th style="width: 15%;" class="sorting" tabindex="0" aria-controls="add-row" rowspan="1" colspan="1" aria-label="Action: activate to sort column ascending"><input type="checkbox"  id="CheckChon" /></th>
                                <th class="sorting_asc" tabindex="0" aria-controls="add-row" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">Mã giáo viên</th>
                                <th class="sorting" tabindex="0" aria-controls="add-row" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Tên giáo viên</th>


                            </tr>
                        </thead>

                        <tbody id="tblGiaoVien">


                            @foreach (var item in new TracNghiemOnlineDB().GiaoViens.Where(x => x.TrangThai == true && x.MaBoMon.Equals(session.TaiKhoan1)).ToList())
                            {
                                <tr id="@item.MaGV">

                                    <td><input type="checkbox"  value="@item.MaGV" class="txtCheckBox" /></td>
                                    <td>@item.MaGV</td>

                                    <td>@item.TenGV</td>




                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>




</div>



<div class="modal" tabindex="-1" role="dialog" id="modalBoMon">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">THÔNG TIN MÔN HỌC</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="idNganh" value="" />
                <p>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Tên Môn</label>
                        <input type="text" class="form-control" id="tenNganh" placeholder="Tên Môn">
                    </div>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSubmit">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modalConfirm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">CẢNH BÁO</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="ma" value="" />
                Bạn có chắc chắn muốn xóa?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnYes">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        let ma = "";
        $(document).ready(function () {
            $('#frmGV').hide();
            loadDSGV();
         
            $(document).on('click', 'button[name=btnTrangThai]', function () {

              
                $('#thongbao').empty();
                var trangthai = $(this).closest('tr').find("td:eq(2)").attr('id');

                 ma = $(this).closest('tr').attr('id');
                if (trangthai == 'false') {
                    $('#particles1').show();

                    $.ajax({
                        url: '/Admin/Monhoc/UpdateTrangThai', type: 'post',
                        data: {
                            ma: ma,
                            s: trangthai,
                            chuoi: ''
                        },
                        success: function (data) {
                            if (data.code == 200) {

                                loadDSGV();
                                $('#particles1').hide();
                            } else {
                                alert(data.msg);
                                $('#particles1').hide();
                            }
                        }
                    });
                }
                else {
                    $('#frmmon').hide();
                    $('#frmGV').slideDown();
                }

            });
        });
        //load du lieu
        function loadDSGV() {
            $('#modalBoMon').modal('hide');
            $.ajax({
                url: '/Admin/Monhoc/dsMon', type: 'get',

                success: function (data) {
                    if (data.code == 200) {
                        $('#tblMon').empty();
                        $.each(data.dsNganh, function (k, v) {
                            let tr = '<tr id = "' + v.MaNganh + '">';
                            tr += '<td>' + v.MaNganh + '</td>';
                            tr += '<td>' + v.TenNganh + '</td>';

                            if (v.trangThai == false) {
                                tr += '<td id="true"><button  name="btnTrangThai" class="btn btn-xs btn-success "> Mở </button></td>'
                            } else {
                                tr += '<td id="false"><button name="btnTrangThai" class="btn btn-xs btn-danger "> Đóng </button></td>'
                            }
                            tr += '<td>';
                            tr += ' <a href="/Admin/Home/ChuongHoc/' + v.MaNganh + '" class="btn btn-xs btn-primary">';
                            tr += '<span><i class="far fa-eye"></i></span></a>&ensp;';

                            tr += '<button name="Update" class="btn btn-xs btn-success"><i class="far fa-edit" aria-hidden="true"></i></button>&ensp;';
                            tr += '<button name="Delete" class="btn btn-xs  btn-danger"><i class="far fa-trash-alt" aria-hidden="true" style="color:white"></i></button>';



                            tr += '</td > ';
                            tr += '</tr > ';
                            $('#tblMon').append(tr);

                        });

                    }
                }
            });
        };

        //show form
        $('#btnAdd').click(function () {
            $('#modalBoMon').modal();
            $('#idNganh').val('');
        })
        $('#btnquay').click(function () {
            var Check = document.getElementsByClassName('txtCheckBox');
            for (var i = 0; i < Check.length; i++) {
                Check[i].checked = false;

            }
            $('#CheckChon').prop("checked",false);
            chuoi = "";
            $('#frmmon').slideDown();
            $('#frmGV').hide();
        })
        $('#CheckChon').click(function () {

            if ($(this).prop("checked") == true) {
                var Check = document.getElementsByClassName('txtCheckBox');
                for (var i = 0; i < Check.length; i++) {
                    Check[i].checked = true;

                }
              
            }
            else {
                var Check = document.getElementsByClassName('txtCheckBox');
                for (var i = 0; i < Check.length; i++) {
                    Check[i].checked = false;


                }
                chuoi = "";
            }
        });
        $('#btnLuu').click(function () {
            $('#particles1').show();
            var CheckBox = $('.txtCheckBox');
            chuoi = "";
            $.each(CheckBox, function (k, v) {
                if ($(this).prop("checked") == true) {

                    chuoi += $(this).val() + "/";

                }
            });
            
            if (chuoi.length > 0) {
                $.ajax({
                    url: '/Admin/Monhoc/UpdateTrangThai', type: 'post',
                    data: {
                        ma: ma,
                        s: true,
                        chuoi: chuoi
                    },
                    success: function (data) {
                        if (data.code == 200) {
                            $('#CheckChon').prop("checked", false);
                            loadDSGV();
                            $('#frmmon').slideDown();
                            $('#frmGV').hide();
                            $('#particles1').hide();
                            var Check = document.getElementsByClassName('txtCheckBox');
                            for (var i = 0; i < Check.length; i++) {
                                Check[i].checked = false;

                            }
                            chuoi = "";
                        } else {
                            alert(data.msg);
                            $('#particles1').hide();
                        }
                    }
                });
            }
            else {
                alert("Vui lòng chọn giáo viên sử dụng")
            }
            
        })
        //them nganh
        $('#btnSubmit').click(function () {

            let tenNganh = $('#tenNganh').val().trim();

            if (tenNganh.length == 0) {
                alert("Vui lòng nhập đầy đủ thông tin");
                return;
            }
            var idNganh = $('#idNganh').val().trim()

            if (idNganh.length == 0) {
                //Add
                $.ajax({
                    url: '/Admin/Monhoc/addMon', type: 'post',
                    data: {

                        tenMON: tenNganh
                    },
                    success: function (data) {
