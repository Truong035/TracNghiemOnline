@model List<TracNghiemOnline.Model.CauHoi>
@{
    ViewBag.Title = "LoalFile";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}

<h2>CreateCauHoi</h2>

<div class="card">
    <div class="card mb-4">

        @foreach (var item in Model)
        {

            <div class="card-body">
                <form>
                    <div class="form-group">
                        <h5 style="width:710px;"> @item.NoiDubg1 </h5>


                        <div class="card-body ">
                            <img class="img-circle center-block" style="margin-left:140px" src="@item.HinhAnh1"
                                 alt="anh viet nam anh 1 " width="400px" height="400px" />
                        </div>


                    </div>
                    @foreach (var item1 in item.CauHois)
                    {
                        <div class="form-group">

                            <img class="img-circle center-block" style="margin-left:80px" src="@item.HinhAnh1"
                                 alt="anh viet nam anh 1 " width="150px" />


                            <div class="custom-control custom-radio">
                                <input class="custom-control-inline" id="@item1.MaDA" name="@item.MaCH" type="radio" onclick="changeText(this.id)" />
                                <label class="custom-control-inline" style="width:700px" for="@item1.MaDA">

                                    @item1.NoiDung1
                                </label>

                            </div>
                        </div>
                    }

                </form>
            </div>


        }

    </div>


</div>



