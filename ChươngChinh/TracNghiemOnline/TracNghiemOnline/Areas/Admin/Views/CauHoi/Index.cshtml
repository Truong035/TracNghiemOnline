@model  List<TracNghiemOnline.Modell.Kho_CauHoi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";

}


<div class="card-body bg-danger ">
    <div class="mt-lg-5">
        <h2 class="mt-4"> Danh Sách Câu Hỏi </h2>

    </div>
</div>

<div class="card-header ">
    <div class="container-fluid">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Câu Hỏi  </th>
                            <th>Nôi Dung</th>
                            <th> Mức Độ </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Mã Câu Hỏi  </th>
                            <th>Nôi Dung</th>
                            <th> Mức Độ </th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td > @item.Ma_CauHoi </td>

                                <td > @item.NoiDung</td>
                                <td>  @item.MucDo </td>
                                <td style="text-align:center">
                                    <div class="row-cols-1">
                                        <div class="col-4"><a href="/Admin/CauHoi/DapAn/@item.Ma_CauHoi">  Xem   </a></div>
                                        <div class="col-3"><a href="#"> Sữa</a></div>
                                        <div class="col-3"><a href="#"> Xóa  </a></div>

                                    </div>
                                </td>
                            </tr>

                        }

                    </tbody>

                </table>

            </div>
     
            <div class="row">
                <div class="col-3" style="text-align:center">
                    <a class="btn-dark nav-link" href="/Admin/CauHoi/CreateCauHoi/@ViewBag.MaChuong" style="text-align:center">Thêm Câu Hỏi</a>
                </div>
            </div>
        </div>
    </div>
</div>










