@model List<TracNghiemOnline.Modell.Chuong_Hoc>
@{
    ViewBag.Title = "DSchuong";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}

<div class="col-md-12">
    <input hidden="hidden" id="txtmon" value="@ViewBag.id" />
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">  @ViewBag.Kho</h4>
              
            </div>
        </div>
        <div style="width:auto; height:3px; background-color:rgb(248,249,250);"></div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="add-row_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">

                    <div class="col-sm-12">
                        <table id="dataTable" class="display table table-striped table-hover dataTable" role="grid" aria-describedby="add-row_info">
                            <thead>

                                <tr>
                                    <th>Mã Chương</th>
                                    <th>Tên Chương</th>
                                    <th> Số Câu Hỏi </th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody id="tblchuong">
                                @{ 
                                       
                                        foreach (var item in Model.Where(x => x.TrangThai != 0))
                                        {
                                    <tr id="@item.Ma_Chuong">
                                        <td>   @item.Ma_Chuong </td>

                                        <td>   @item.TenChuong</td>
                                        <td>  @(item.Kho_CauHoi.ToList().Count) </td>
                                        <td>
                                            <a href="/Admin/CauHoi/KhoCH/@item.Ma_Chuong" class="btn btn-xs btn-primary">
                                                <span><i class="far fa-eye"></i></span>
                                            </a>

                                         
                                        </td>
                                    </tr>
                                        
                                    }
                                    }

                            </tbody>


                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


