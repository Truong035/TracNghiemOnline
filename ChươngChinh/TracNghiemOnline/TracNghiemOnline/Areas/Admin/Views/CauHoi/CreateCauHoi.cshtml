@model List<TracNghiemOnline.Modell.Kho_CauHoi>
@{
    ViewBag.Title = "CreateCauHoi";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
    var machuong = (string)ViewBag.MaChuong;

}

@section Jsfooter{
    <script>
        $(document).ready(function () {
            $('#btnNhan').click(function () {
                if ($('#txtFile').val().length > 0) {
                    if (window.FormData !== undefined) {

                        $('#modalConfirm').modal();
                        var fileupload = $('#txtFile').get(0);
                        var file = fileupload.files;
                        var formdata = new FormData();
                        formdata.append('file', file[0]);
                        var machuong = this.title;
                        $.ajax({
                            type: 'POST',
                            url: '/CauHoi/XuLyFile',
                            contentType: false, //Khong co hear
                            processData: false,//Khong Xu Ly Du Lieu
                            data: formdata,
                            success: function (urlImage) {
                              
                                if (urlImage.status == true) {
                                    $('#modalConfirm').modal('hide');
                                    window.location = "/Admin/CauHoi/CreateCauHoi/" + machuong;

                                }
                                else {
                                    $('#modalConfirm').modal('hide');
                                    alert("Sai Định Dạng Vui Lòng Kiểm Trả Lại");
                                }

                            }
                        });
                    }
                } else {
                    alert("Vui lòng chọn file");
                }


            });


        });
        function XuKien(ID) {
            window.location = "/Admin/CauHoi/LoadQuestion/" + ID;

        }

    </script>
}

<div class="modal" tabindex="-1" style="text-align:center" role="dialog" id="modalConfirm">
    <div class="modal-dialog" style="margin-top:20%" role="document">
      
            <img src="~/Content/Img/5.gif"/>
        
    </div>
</div>
<div class="container card">
  
    <div class="row" id="DsThethi">
        <input id="txtFile" class="form-control col-7" type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,.doc,.docx" />
        <div class="col-4">

            <button id="btnNhan" class="btn btn-primary" title="@machuong"> Tải Lên</button>
            <a class="btn btn-primary" download="" href="~/Content/Img/TracnghiemOnline.rar">Download biểu mẩu</a>
            @if (Model.Count > 0)
            {
                <input type="button" id="@machuong" onclick="XuKien(this.id)" class="btn btn-success col-3" value="Thêm" href="" />

            }

        </div>
    </div>
    <div class="card-body">

        <div class=" mb-4">
            @{
                int i = 0;
                foreach (var item in Model)
                {


                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <h5 style="width:710px;"> Câu @(i=i+1) :  @item.NoiDung </h5>

                                @if (item.HinhAnh.Length > 0)
                                {
                                    <div class="card-body ">
                                        <img class="img-circle center-block" style="margin-left:140px" src="@item.HinhAnh"
                                             alt="anh viet nam anh 1 " width="400px" height="400px" />
                                    </div>

                                }

                            </div>
                            @foreach (var item1 in item.Dap_AN)
                            {
                                <div class="form-group">
                                    @{ try
                                        {
                                            if (item1.HinhAnh.Length > 0)
                                            {
                                                <img class="img-circle center-block" style="margin-left:80px" src="@item1.HinhAnh"
                                                     alt="anh viet nam anh 1 " width="150px" />

                                            }
                                        }
                                        catch { }
                                    }


                                    <div class="custom-control custom-radio">

                                        @if (item1.TrangThai == true)
                                        {
                                            <label class="custom-control-inline" style="width:700px;color:orangered " for="@item1.MA_DAN">
                                                @item1.NoiDung
                                            </label>
                                        }
                                        else
                                        {
                                            <label class="custom-control-inline" style="width:700px" for="@item1.MA_DAN">
                                                @item1.NoiDung
                                            </label>
                                        }



                                    </div>
                                </div>
                            }
                            <label> Mức @item.MucDo</label>
                        </form>
                    </div>


                }
                if (Model.Count > 0)
                {
                    @*<div class="row">
                            <div class="col-10" style="text-align:center">
                                <select id="txtMucDo" class="form-control col-12">
                                    <option value="">Mức Độ Câu Hỏi</option>
                                    <option value="Nhận Biết">Nhận Biết</option>
                                    <option value="Thông Hiểu">Thông Hiểu</option>
                                    <option value="Vận Dụng">Vận Dụng</option>
                                    <option value="Vận Dụng Cao">Vận Dụng Cao</option>

                                </select>
                            </div>
                        </div>*@



                }

            }
        </div>


    </div>
</div>



