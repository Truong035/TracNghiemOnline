@model List<TracNghiemOnline.Modell.KiThi>
@{
    ViewBag.Title = "KiThi";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
}


@section scripts {
    <script>




            $(document).ready(function () {

                var ki;
            //load du lieu

        $(document).on('click', "button[name = 'Delete']", function () {
            let ma = $(this).closest('tr').attr('id');
            $('#ma').val(ma);
            $('#modalConfirm').modal();

        });
                $(document).on('click', "button[name = 'Update']", function () {
                    $('#thongbao').empty();
                    ki = $(this).closest('tr');
                    let ten = $(this).closest('tr').find("td:eq(1)").text();
                    let ma = $(this).closest('tr').attr('id');
                    $('#ma').val(ma);
                    $('#txtKi').val(ten);
                    $('#modalLop').modal();
                });

        $('#btnYes').click(function () {
            let ma = $('#ma').val();
            $.ajax({
                url: '/Admin/QuanLyThi/DeleteKiThi', type: 'post',
                data: {
                    maki: ma,
                },
                success: function (data) {
                          $('#modalConfirm').modal('hide');
                        alert(data.msg);
                        LoadData();


                }
            });

        });


            //show form
            $('#btnAdd').click(function () {
                $("#txtKi").val('');
                $('#ma').val('');
                $('#thongbao').empty();
                    $('#modalLop').modal();

            })

                $(document).on('click', 'button[name=btnTrangThai]', function () {


                    $('#thongbao').empty();
                    var trangthai = $(this).closest('tr').find("td:eq(2)").attr('id');
                    let ten = $(this).closest('tr').find("td:eq(1)").text();
                    let ma = $(this).closest('tr').attr('id');
                    $('#ma').val(ma);
                    $('#txtKi').val(ten);

                    $.ajax({
                        url: '/Admin/QuanLyThi/Update',
                        data: { maki: ma, nd: ten, trangthai:trangthai },
                        type: 'Get',
                        success: function (res) {
                            $("#txtKi").val('');
                            LoadData();
                            $('#ma').val('');
                        }

                    });


                });

            //Add or Updtae
        $('#btnSubmit').click(function () {
            $('#thongbao').empty();
            let ma = $('#ma').val();
            var tenKi = $("#txtKi").val().trim();
            if (tenKi.length==0) {
                $('#thongbao').empty();

                $('#thongbao').append("Bạn Vui Lòng Điền Tên Kì Học");
            }
            else {
                if (ma.length == 0) {
                    $.ajax({
                        url: '/Admin/QuanLyThi/AddKiThi',
                        data: { nd: tenKi },
                        type: 'Get',
                        success: function (res) {
                            $("#txtKi").val('');
                            $('#ma').val('');
                            LoadData();
                        }

                    });

                    $('#modalLop').modal('hide');
                }
                else {
                    var trangthai = $(ki).find("td:eq(2)").attr('id');

                    if (trangthai=='true') {
                        trangthai = false;
                    }
                    else{
                        trangthai = true;
                    }

                    $.ajax({
                        url: '/Admin/QuanLyThi/Update',
                        data: { maki: ma, nd: tenKi, trangthai: trangthai },
                        type: 'Get',
                        success: function (res) {
                            $("#txtKi").val('');
                            LoadData();
                            $('#ma').val('');
                        }

                    });

                    $('#modalLop').modal('hide');
                }


            }


        });
                LoadData();
        function LoadData() {
            $('#ma').val('');
            $.ajax({
                url: '/Admin/QuanLyThi/LoadKiThi',
                type: 'Get',
                success: function (data) {
                    $('#Kithi').empty();
                    $.each(data.Kithi, function (k, v) {

                        var let = '<tr id="' + v.MAKI + '">';
                        let += '<td>' + v.MAKI + '</td >';
                        let += '<td>' + v.TenKi.trim() + '</td > ';
                        if (v.TrangThai == false) {
                            let += '<td id="true"><button  name="btnTrangThai" class="btn badge-success "> Mở </button></td>'
                        } else {
                            let += '<td id="false"><button name="btnTrangThai" class="btn badge-success "> Đóng </button></td>'
                        }
                        let += '<td>'
                        let += '<button name="Update" class="btn btn-xs btn-success"><i class="far fa-edit" aria-hidden="true" style="color:white"></i></button>&ensp;'
                        let += '<button name="Delete" class="btn btn-xs btn-danger"><i class="far fa-trash-alt" aria-hidden="true"></i></button>';
                        let += '</td>';
                        let += '<tr>';
                        $('#Kithi').append(let);
                    });

                }

            });
        }

            //click button Sua

            //Xóa



            });
    </script>


}

@*Modal Xóa*@
<div class="modal" tabindex="-1" role="dialog" id="modalConfirm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark" style="color:white">
                <h5 class="modal-title">CẢNH BÁO</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="ma" value="" />
                Bạn có chắc chắn muốn xóa?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnYes">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>

@*Modal thêm sửa*@
<div class="modal" tabindex="-1" role="dialog" id="modalLop">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark" style="color:white">
                <h5 class="modal-title">THÔNG TIN KỲ HỌC</h5>

            </div>
            <div class="modal-body">
                <input type="text" hidden id="idLop" value="" />

                <div class="form-group">
                    <label for="exampleFormControlInput1">Tên lớp</label>
                    <input type="text" class="form-control" id="txtKi" placeholder="Tên Kì Học">
                    <p id="thongbao" style="color:red"></p>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSubmit">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnDong">Đóng</button>
            </div>
        </div>
    </div>
</div>



<div class="container-fluid">

    <div class="card mb-4">


        <div class="row" style="padding:10px; ">
            <div class="col-sm-12 col-md-6">
                <svg class="svg-inline--fa fa-table fa-w-16 mr-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="table" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M464 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zM224 416H64v-96h160v96zm0-160H64v-96h160v96zm224 160H288v-96h160v96zm0-160H288v-96h160v96z"></path></svg><!-- <i class="fas fa-table mr-1"></i> Font Awesome fontawesome.com -->
                Danh sách kỳ thi
            </div>
            <div class="col-sm-12 col-md-6">
                <button class="btn btn-primary" id="btnAdd" style="float:right">Thêm kỳ thi</button>
            </div>
        </div>

        <div style="width:auto; height:3px; background-color:rgb(248,249,250);"></div>
        <div class="card-body">
            <div class="">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Mã Kì Thi </th>
                                        <th>Tên Kì Thi</th>
                                        <th> Trạng Thái </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>

                                        <th>Mã Kì Thi </th>
                                        <th>Tên Kì Thi</th>
                                        <th> Trạng Thái </th>
                                        <th></th>

                                    </tr>
                                </tfoot>
                                <tbody id="Kithi">
                                    @foreach (var item in Model)

                                    {
                                        <tr id="@item.MAKI">
                                            <td> @item.MAKI </td>

                                            <td> Kì Thi   @item.TenKi</td>
                                            @if (item.TrangThai == true)
                                            {

                                                <td id="false">  <button name="btnTrangThai" class="btn badge-success "> Đóng </button></td>
                                            }
                                            @if (item.TrangThai == false)
                                            {
                                                <td id="true"> <button name="btnTrangThai" class="btn badge-success "> Mở </button></td>

                                            }
                                            <td>
                                                <button name="Update" class="btn btn-success"><i class="far fa-edit" aria-hidden="true" style="color:white"></i></button>&ensp;
                                                <button name="Delete" class="btn btn-danger"><i class="far fa-trash-alt" aria-hidden="true"></i></button>

                                            </td>
                                        </tr>

                                    }

                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

