        <script src="~/assets/demo/JavaScript.js"></script>
        <script src="~/Content/datepicker/js/jquery.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>

        <script src="~/Content/datepicker/js/bootstrap.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
        <script src="/assets/demo/datatables-demo.js"></script>
        <script>
            $('#Xembaithi').show();

            $('#bntmucdo').click(function () {
                $('#myNavbar1').show();
                $('#XemDanhgia').hide();
                $('#myNavbar2').hide();
                $('#Xembaithi').show();


            });
            $('#bntnoidung').click(function () {
                $('#myNavbar1').hide();
                $('#XemDanhgia').hide();
                $('#myNavbar2').show();
                $('#Xembaithi').hide();


            });

            $('#bntbaithi').click(function () {
                $('#myNavbar1').hide();
                $('#myNavbar2').hide();
                $('#XemDanhgia').hide();
                $('#Xembaithi').show();


            });

            $('#bntnhanxet').click(function () {
                $('#myNavbar1').hide();

                $('#myNavbar2').hide();
                $('#XemDanhgia').show();
                $('#Xembaithi').hide();


            });

  
        </script>


</body>
</html>

