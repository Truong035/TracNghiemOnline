@model TracNghiemOnline.Model.DanhGia
    @{ 
        ViewBag.Title = "DiemSo";
        Layout = null;


    }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Trắc Nghiệm Online</title>
    <link href="~/Content/css/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Content/css/Style1.css" rel="stylesheet" />
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="card-header">

    <div class="container-fluid">

        <div class="col-10" style="margin-left:10%">
            <div class=" card-body mb-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <span>Đề Thi Trắc Nghiệm</span>
                    </div>

                </div>
                <div class="card-body">
                    <a class="btn btn-danger" href="/Admin/QuanLyThi/TroVe"> Quay Về</a>
                    <div class="card">

                        <div class="card-body"> Số Câu Đúng :   @Model.ketQuaThi.SoCauDung Câu </div>
                        <div class="card-body"> Số Câu Sai :    @Model.ketQuaThi.SoCauSai Câu </div>
                        <div class="card-body"> Điểm Số  :     @Model.ketQuaThi.DiemSo  Điểm </div>



                        <div class="container">                         
                                <div class="card-body ">
                                    @{
                                        int i = 0;

                                        foreach (var item in Model.ketQuaThi.De_Thi.CauHoiDeThis)
                                        {

                                                                        <div class="form-group">
                                                                            <h5 style="width:1000px;"> Câu @(i=i+1) : @item.Kho_CauHoi.NoiDung </h5>

                                                                            @{
                                                                                try
                                                                                {
                                                                                    if (item.Kho_CauHoi.HinhAnh.Length > 0)
                                                                                    {
                                                                                        <div class="card-body ">
                                                                                            <img class="img-circle center-block" style="margin-left:140px" src="@item.Kho_CauHoi.HinhAnh"
                                                                                                 alt="anh viet nam anh 1 " width="400px" height="400px" />
                                                                                        </div>

                                                                                    }

                                                                                }
                                                                                catch { }

                                                                            }

                                                                        </div>
                                            foreach (var item1 in item.Kho_CauHoi.Dap_AN)
                                            {
                                                <div class="form-group">
                                                    @try
                                                    {
                                                        if (item1.HinhAnh.Length > 0)
                                                        {
                                                            <img class="img-circle center-block" style="margin-left:80px" src="@item1.HinhAnh"
                                                                 alt="anh viet nam anh 1" width="150px" />

                                                        }
                                                    }
                                                    catch { }


                                                    @{
                                                        if (Model.ketQuaThi.De_Thi.Da_SVLuaChon.ToList().Exists(x => x.Ma_DAN == item1.MA_DAN && item1.TrangThai == true))
                                                        {
                                                            <div class="custom-control custom-radio" style="background-color:lightgreen">
                                                                <input class="custom-control-inline form-check" id="@item1.MA_DAN" name="@item1.Ma_CauHoi" type="radio" checked="checked" />
                                                                <label class="custom-control-inline" style="width:820px " for="@item1.MA_DAN">
                                                                    @item1.NoiDung
                                                                </label>
                                                                <i class="bi bi-check2"></i>
                                                            </div>


                                                        }
                                                        else if (Model.ketQuaThi.De_Thi.Da_SVLuaChon.ToList().Exists(x => x.Ma_DAN == item1.MA_DAN))
                                                        {
                                                            <div class="custom-control custom-radio" style="background-color:red">
                                                                <input class="custom-control-inline form-check"  id="@item1.MA_DAN" name="@item1.Ma_CauHoi" type="radio" checked="checked" />
                                                                <label class="custom-control-inline" style="width:820px" for="@item1.MA_DAN">
                                                                    @item1.NoiDung
                                                                </label>
                                                                <i class="bi bi-x-circle"></i>
                                                            </div>
                                                        }
                                                        else if (item1.TrangThai == true)
                                                        {
                                                            <div class="custom-control custom-radio" style="background-color:lightgreen">
                                                                <input class="custom-control-inline form-check" disabled id="@item1.MA_DAN" name="@item1.Ma_CauHoi" type="radio" />
                                                                <label class="custom-control-inline" style="width:670px" for="@item1.MA_DAN">
                                                                    @item1.NoiDung
                                                                </label>

                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="custom-control custom-radio">
                                                                <input class="custom-control-inline form-check"disabled rel="tooltip" id="@item1.MA_DAN" name="@item1.Ma_CauHoi" type="radio" />
                                                                <label class="custom-control-inline" style="width:670px" for="@item1.MA_DAN">
                                                                    @item1.NoiDung
                                                                </label>

                                                            </div>
                                                        }

                                                    }
                                                </div>

                                            }

                                        }
                                    }
                                </div>

                            </div>
                        </div>
                    </div>


                </div>
            </div>


            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">  Copyright &copy; Your Website 2020 </div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>



