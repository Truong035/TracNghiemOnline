
@{
    ViewBag.Title = "DSSinhVen";
    Layout = "~/Areas/Admin/Views/Shared/LaoutShare.cshtml";
    string maphong = (string)ViewBag.MaPhong;
    bool quyen = (bool)ViewBag.Quyen;
    var lophocphan = (TracNghiemOnline.Modell.LopHocPhan)ViewBag.phong;

}
@section Jsfooter{
   
    <script>

        $(document).ready(function () {

            $('#ChonDe').hide();

            $('#btnDong').click(function () {

                $('#ChonDe').hide();

                $('#DSSV').slideDown();

            });
            $('#example').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'excel', 'pdf', 'print'
                ]
            });
            $('#CheckChon').click(function () {

                if ($(this).prop("checked") == true) {
                    var Check = document.getElementsByClassName('txtCheckBox');
                    for (var i = 0; i < Check.length; i++) {
                        Check[i].checked = true;

                    }
                }
                else {
                    var Check = document.getElementsByClassName('txtCheckBox');
                    for (var i = 0; i < Check.length; i++) {
                        Check[i].checked = false;

                    }
                }




            });
            var ThongTin;
            $(document).on('click', 'button[name=btnXoa]', function () {

                ThongTin = $(this).closest('tr');
                $('#modalConfirm').modal();


            });

            $('#btnYes').click(function () {

                $.ajax({
                    url: '/Admin/QuanLyThi/DeleteSinhVien', type: 'post',
                    data: {
                        maSV: $(ThongTin).find("td:eq(0)").attr('id'),
                        MaLop: $(ThongTin).attr('id'),

                    },
                    success: function (data) {
                        $(ThongTin).remove();
                        $('#modalConfirm').modal('hide');
                    }
                });
            });


            $('#bntTaoPhong').click(function () {

                var Check = $('.txtCheckBox');
                var arr = [];
                $.each(Check, function (i, item) {
                    if ($(item).prop("checked") == true) {
                        alert($(this).val())
                        arr.push({
                            Ma_SV: $(item).val(),

                        });
                    }


                });
                if (arr.length > 0) {
                    $('#particles1').show();
                    $.ajax({
                        type: 'POST',
                        url: '/Admin/QuanLyThi/CreatePhongThi/',
                        data: {
                            MALop: $('#CheckChon').val(), DS: JSON.stringify(arr), MaSV: "",
                        },
                        success: function (res) {
                            window.location = '/Admin/QuanLyThi/PhongThi'
                            $('#particles1').hide();
                        }

                    });
                }
            });


        });
        function Them(id) {
            var CheckBox = $('.txtCheckBox');
            var sv = [];
            $.each(CheckBox, function (k, v) {
                if ($(this).prop("checked") == true) {

                    sv.push({
                        Ma_SV: $(this).val(),

                    });

                }
            });
            $('#particles1').show();
            alert("Lưu thành công");
            $.ajax({
                type: 'POST',
                url: '/Admin/QuanLyThi/CreatePhongThi',
                data: { MALop: $('#CheckChon').val(), DS: JSON.stringify(sv), MaSV: id },
                success: function (res) {
                    window.location = '/Admin/Home/DSSVThi/' + id;
                }

            });


        }

        
        function readURL(event) {

            var file = event.files[0];
            var reader = new FileReader();
            var excelData = [];
            var maphong1 = event.title;
            reader.onload = function (event) {
                var data = event.target.result;
                var workbook = XLSX.read(data, {
                    type: 'binary'
                });

                workbook.SheetNames.forEach(function (sheetName) {
                    // Here is your object
                    var XL_row_object = XLSX.utils.sheet_to_row_object_array(workbook.Sheets[sheetName]);
                    var arr = "";
                    for (var i = 1; i < XL_row_object.length; i++) {
                        arr+=XL_row_object[i]["Trắc nghiệm online"]+"/";

                    }
                   
                    if (arr.length > 0) {
                        $('#particles1').show();
                        $.ajax({
                            type: 'POST',
                            url: '/Admin/Home/UploadExcel',
                            data: { arr: arr },
                            success: function (data) {
                                if (data.status == true) {
                                    window.location = '/Admin/Home/LoadData/' + maphong1;
                                  //  $('#particles1').hide();
                                }
                                else {
                                    alert("FILE không hợp lệ");
                                    $('#particles1').hide();
                                }
                             
                            }
                        } )
                            }
                  
                })

            };

            reader.onerror = function (ex) {
                console.log(ex);
            };

            reader.readAsBinaryString(file);

        }

    </script>

}


<div class="col-md-12 " id="DSSV">
    <div class="card">
      
        <div class="card-header">
            <div class="row">
                <div class="col-9">
                    <div class="mt-3 ">
                        <h3 class="text-uppercase">
                            Danh Sách Sinh Viên Lớp @lophocphan.TenLop
                        </h3>
                    </div>
                </div>
                @if (quyen == true)
                {
                    if (maphong.Length == 0)
                    {
                        <div class="row col">


                            <a class="btn btn-primary btn-round ml-auto" href="/Admin/QuanLyThi/ThemSinhVien/@lophocphan.MaLop" data-target="#addRowModal">
                                <i class="fa fa-plus"></i>
                                Thêm sinh viên
                            </a>
                            <button id="btnNhan" title="@lophocphan.MaLop" onclick="$('#txtFile').trigger( 'click' )" class="btn btn-primary btn-round ml-auto" data-target="#addRowModal">
                                <i class="bi bi-arrow-bar-up"></i>
                                Tải File
                            </button>
                            <input id="txtFile" title="@lophocphan.MaLop" onchange="readURL(this);" hidden type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" />



                        </div>
                    }

                }
                @if (maphong.Length > 0)
                {


                    <button id="@maphong" onclick="Them(id)" class="btn btn-primary btn-round ml-auto">
                        <i class="fa fa-plus"></i>
                        Lưu
                    </button>
                }



            </div>


        </div>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <div id="add-row_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                        <div class="col-sm-12">
                            <table id="example" class="display table table-striped table-hover dataTable" role="grid" aria-describedby="add-row_info">
                                <thead>
                                    <tr>
                                        @if (maphong.Length > 0)
                                        {
                                            <th>
                                                <input type="checkbox" value="@lophocphan.MaLop" id="CheckChon" />
                                            </th>
                                        }
                                        <th>Mã Sinh Viên  </th>
                                        <th>Tên </th>
                                        <th> Lớp  </th>
                                        @if (quyen == true)
                                        {
                                            <th>  </th>
                                        }

                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in lophocphan.DS_LopHP.OrderByDescending(x => Int64.Parse(x.MA_SV)).ToList())
                                    {
                                        <tr id="@item.Ma_LOP">
                                            @if (maphong.Length > 0)
                                            {
                                                <td id="@item.MA_SV"> <input type="checkbox" id="@item.MA_SV" value="@item.MA_SV" class="txtCheckBox" /> </td>
                                            }
                                            <td id="@item.MA_SV">  @item.MA_SV </td>

                                            <td> @item.SinhVien.Ten </td>
                                            <td>  @item.SinhVien.Lop.TenLop  </td>
                                            @{
                                                if (quyen == true)
                                                {
                                                    <td style="text-align:center">
                                                        <div class="col"><button class="btn btn-xs btn-danger" name="btnXoa"> <i class="bi bi-trash"></i>  </button></div>
                                                    </td>
                                                }

                                            }

                                        </tr>

                                    }

                                </tbody>

                            </table>

                        </div>


                    </div>
                </div>
            </div>


        </div>
        <div class="modal" tabindex="-1" role="dialog" id="modalConfirm">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">CẢNH BÁO</h5>

                    </div>
                    <div class="modal-body">
                        <input type="text" hidden id="ma" value="" />
                        Bạn có chắc chắn muốn xóa?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnYes">Xác nhận</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnDong">Đóng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
