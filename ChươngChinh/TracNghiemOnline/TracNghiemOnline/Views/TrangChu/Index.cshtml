
@model IEnumerable<TracNghiemOnline.Modell.Chuong_Hoc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/LayOutLopHocPhan.cshtml";
    LopHocPhan hocPhan = (LopHocPhan)Session["LopHP"];
    var session = (TaiKhoan)Session[ComMonStants.UserLogin];
}
@using TracNghiemOnline.ComMon;


@section scripts {



    <script>

        $(document).ready(function () {
            var item = $('#hocbai');
            item.addClass("Narlink");

        });
        function BoDe(ID) {
            //   document.location = '/Bode/' + ID;
            document.location = '/LopHoc/' + ID;

        }


    </script>

}

@using TracNghiemOnline.Modell;

<div class="row card" style="margin-top:0px" id="frmbai">

    <div class="card-header card-header-info">
        <h4 class="card-title">Danh Sách Bài Học</h4>

        <p class="card-category">Các bài cần hoàn thành </p>
    </div>


    @{
        int a = 0;
        double pt = 0;
        for (int i = 0; i < Model.ToArray().Count(); i++)
        {
            <div class="col-md-12">
                <div class="card" style="margin-top:0px">
                    <div class="row">
                        <div class="col-md-auto" style="margin-top:45px">
                            <img src="https://img.icons8.com/carbon-copy/70/000000/book-reading.png" />
                        </div>
                        <div class="col-md-4 ">
                            <div class="form-group">
                                <h4 class="card-title text-info">Chương  @(i + 1) :@Model.ToArray()[i].TenChuong</h4>
                                <label class="bmd-label-floating row">Số câu yêu cầu :50</label>
                                <label class="bmd-label-floating row">

                                    Số câu đã làm : @{
                                        a = 0;
                                        pt = 0;
                                        try
                                        {

                                            a = Convert.ToInt32(Model.ToArray()[i].DS_BaiHoc.SingleOrDefault(x => x.MaSV.Equals(session.TaiKhoan1) && x.Ma_Bai == Model.ToArray()[i].Ma_Chuong).SoCauDung);

                                            int b = Convert.ToInt32(Model.ToArray()[i].DS_BaiHoc.SingleOrDefault(x => x.MaSV.Equals(session.TaiKhoan1) && x.Ma_Bai == Model.ToArray()[i].Ma_Chuong).SoCauSai);
                                            pt = ((double)(a) / (double)(a + b)) * (double)100;
                                            a = a + b;
                                        }
                                        catch
                                        {
                                            a = 0;
                                            pt = 0;
                                        }



                                    }
                                    @a
                                    @if (a < 50)
                                    {
                                        <i class="bi bi-exclamation-lg" style="margin-left:5px;color:#ff0000"></i>
                                    }


                                </label>

                                <label class="bmd-label-floating row">
                                    Số câu làm đúng

                                    @Model.ToArray()[i].DS_BaiHoc.SingleOrDefault(x => x.MaSV.Equals(session.TaiKhoan1) && x.Ma_Bai == Model.ToArray()[i].Ma_Chuong).SoCauDung

                                </label>
                                <label class="bmd-label-floating row">Số câu làm sai @Model.ToArray()[i].DS_BaiHoc.SingleOrDefault(x => x.MaSV.Equals(session.TaiKhoan1) && x.Ma_Bai == Model.ToArray()[i].Ma_Chuong).SoCauSai</label>
                            </div>
                        </div>
                        <div class="col-md-3" style="margin-top:60px">
                            @{ if (pt > 70)
                                {

                                    <div class="progress">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: @pt%" ; aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@pt.ToString().Substring(0, 2)%</div>
                                    </div>
                                }

                                if (pt > 0)
                                {
                                    <i class="bi bi-pin" style="margin-left:140px;color:#f85d5d"></i>
                                    <div class="progress" style="margin-top:-2%">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: @pt%" ; aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@pt.ToString().Substring(0, 2)%</div>
                                    </div>
                                }
                                else
                                {
                                    <i class="bi bi-pin" style="margin-left:140px ;color:#f85d5d"></i>
                                    <div class="progress" style="margin-top:-2%">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 0%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                }
                            }



                        </div>
                        <div class="col-md-2" style="margin-top:20px;margin-left:25px">
                         
                            <a class="btn btn-info" href="/HocBai/@Model.ToArray()[i].Ma_Chuong" onclick="LamBai(id)">Làm bài</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }




</div>


